<Window x:Class="PatriotPower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="PatriotPower Flyout" 
        Height="400" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded">

    <Border CornerRadius="20" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.4" Color="#880000"/>
        </Border.Effect>

        <Border.Background>
            <ImageBrush ImageSource="background.png" Stretch="UniformToFill" Opacity="0.95">
                <ImageBrush.RelativeTransform>
                    <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1" ScaleY="1"/>
                </ImageBrush.RelativeTransform>
            </ImageBrush>
        </Border.Background>

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFF0F5" Offset="0.0"/>
                            <GradientStop Color="#FFC0CB" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Margin="15,15,0,0">
                    <TextBlock Text="♥ PatriotPower ♥" 
                               FontWeight="Bold" 
                               FontSize="20" 
                               Foreground="#D10056"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="Control dGPU to conserve battery" 
                               FontSize="11" 
                               Foreground="#555"
                               HorizontalAlignment="Left"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="0,15,15,0">

                    <ToggleButton x:Name="PinButton"
                                  Click="PinButton_Click"
                                  Background="Transparent" 
                                  BorderThickness="0" 
                                  Foreground="#888" 
                                  FontSize="14" 
                                  Margin="0,0,5,0"
                                  Padding="5"
                                  Cursor="Hand"
                                  ToolTip="Pin Window">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Content" Value="📍" />
                                <Setter Property="Opacity" Value="0.6" />
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Content" Value="📌" />
                                        <Setter Property="Opacity" Value="1.0" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1.0" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <Button Content="✕" 
                            Click="ExitButton_Click" 
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="#888" 
                            FontSize="16" 
                            FontWeight="Bold"
                            Padding="5"
                            Cursor="Hand"
                            ToolTip="Exit PatriotPower"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">

                <ToggleButton x:Name="EnduranceToggle"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,20"
                              Width="70" Height="70"
                              Cursor="Hand">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="Border" 
                                    CornerRadius="35" 
                                    Background="#F0F0F0" 
                                    BorderBrush="#888888" 
                                    BorderThickness="2">
                                <TextBlock x:Name="Icon"
                                           Text="&#xE7E8;" 
                                           FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="#888888"
                                           Margin="0,-2,0,0"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#4CAF50"/>
                                    <Setter TargetName="Icon" Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <Border Background="#E5FFFFFF" CornerRadius="10" Margin="30,15,30,0" Padding="15,10">
                    <StackPanel>
                        <TextBlock Text="LIVE SYSTEM DRAW" 
                                   FontSize="10" 
                                   FontWeight="Bold" 
                                   Foreground="#777" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,5"/>

                        <TextBlock x:Name="CurrentDrawText" 
                                   Text="-- W" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#333" 
                                   HorizontalAlignment="Center"/>

                        <TextBlock x:Name="PeakDrawText" 
                                   Text="Peak: -- W" 
                                   FontSize="11" 
                                   Foreground="#666" 
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0"/>

                        <TextBlock x:Name="TimeRemainingText" 
                                   Text="" 
                                   FontSize="13" 
                                   FontWeight="Bold" 
                                   Foreground="#333" 
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"
                                   MinHeight="18"/>
                    </StackPanel>
                </Border>

                <TextBlock x:Name="StatusText"
                           Text="Checking system safety..."
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="#D10056"
                           Margin="0,15,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="220"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="15,0,15,20">
                <TextBlock TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           FontSize="11" 
                           Foreground="#333">
                    Made with ♥ during the 
                    <Hyperlink NavigateUri="https://www.hackfaxpatriothacks.org/" 
                               RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="#D10056"
                               TextDecorations="None">
                        GMU Hackathon 2026
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>